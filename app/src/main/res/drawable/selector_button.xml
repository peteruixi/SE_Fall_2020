<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <solid
                android:color="#B3B3B3"/>
            <corners
                android:radius="10dp"/>
            <stroke
                android:color="#3C3C3C"
                android:width="2dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#3C3C3C"/>
            <corners
                android:radius="10dp"/>
            <stroke
                android:color="#3C3C3C"
                android:width="2dp"/>
        </shape>
    </item>
</selector>